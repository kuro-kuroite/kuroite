{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "downlevelIteration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types",
      "./typings"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./config/**/*.ts",
    "./config/**/.*.ts",
    "./config/**/*.tsx",
    "./.storybook/preview.ts",
    "./cypress/plugins/*.ts",
    "./cypress/support/*.ts",
    "./hygen/**/prompt.ts",
    "./scripts/**/*.js",
    "./scripts/**/*.ts",
    "./scripts/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
